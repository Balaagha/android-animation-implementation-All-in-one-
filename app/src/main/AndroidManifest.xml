<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidimpltemplate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.androidimpltemplate.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidMvvmCleanArchitectureExample">
        <activity
            android:name=".ui.animationexamples.transitionwithnavgraph.SharedTransitionWithNavGraphContainerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.animationexamples.uifortransition.ExampleScreenForTransitionActivity"
            android:exported="true" />
        <activity
            android:name="com.example.androidimpltemplate.ui.menu.MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidimpltemplate.ui.miniapplicationforanimation.mainpage.MainPageActivity"
            android:exported="false" />
        <activity
            android:name="com.example.androidimpltemplate.ui.miniapplicationforanimation.login.AuthActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>